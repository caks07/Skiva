<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageSkincare"
            android:layout_width="91dp"
            android:layout_height="102dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginEnd="16dp"
            android:src="@drawable/gambar_penyakit" />

        <LinearLayout
            android:layout_width="264dp"
            android:layout_height="100dp"
            android:layout_marginStart="120dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namaSkincare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toner AJY"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deskripsiSkincare"
                android:layout_width="246dp"
                android:layout_height="25dp"
                android:text="toner dengan ini itu deskripsi"
                android:textSize="10sp" />

            <!-- LinearLayout untuk tombol -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/buttonHargaRupiah"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:backgroundTint="#17C2EC"
                    android:text="Rp. 200.000"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/buttonHargaKoin"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#17C2EC"
                    android:text="700K"
                    android:textSize="10sp" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>
